= form_for @showroom_collection do |f|
  - if @showroom_collection.errors.any?
    #error_explanation
      %h2= "#{pluralize(@showroom_collection.errors.count, "error")} prohibited this showroom_collection from being saved:"
      %ul
        - @showroom_collection.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :showroom_id
    = f.text_field :showroom_id
  .field
    = f.label :collection_id
    = f.text_field :collection_id
  .actions
    = f.submit 'Save'
